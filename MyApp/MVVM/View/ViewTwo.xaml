<UserControl x:Class="MyApp.MVVM.View.ViewTwo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <StackPanel>
        <TextBox Text="{Binding FirstNumber, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,10,0,0" 
                 Width="200"
                 Height="50"
                 FontSize="40"
                 TextAlignment="Center"/>
        
        <Border Width="120"
                Height="30"
                BorderThickness="1"
                BorderBrush="Black"
                Margin="0,3,0,3">
            
            

            <StackPanel Orientation="Horizontal">

                <Button Content="+" 
                        Command="{Binding SetOperatorCommand}"
                        CommandParameter="+"
                        Width="30"/>
                
                <Button Content="-" 
                        Command="{Binding SetOperatorCommand}"
                        CommandParameter="-"
                        Width="30"/>

                <Button Content="*" 
                        Command="{Binding SetOperatorCommand}"
                        CommandParameter="*"
                        Width="30"/>

                <Button Content="/" 
                        Command="{Binding SetOperatorCommand}"
                        CommandParameter="/"
                        Width="30"/>


            </StackPanel>
        </Border>
        <TextBox Text="{Binding SecondNumber, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,10" 
                 Width="200"
                 Height="50"
                 FontSize="40"
                 TextAlignment="Center"/>
        
        <Button Content="=" Command="{Binding CalculateCommand}" 
                Width="100"/>
        <TextBlock Text="{Binding ResultText}" 
                   FontSize="40" 
                   Width="200"
                   TextAlignment="Center"/>
    </StackPanel>
</UserControl>
